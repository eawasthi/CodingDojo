@{
    ViewData["Title"] = "Home Page";
}
<h1>Write a new Review:</h1>
<div>
    @{
        foreach(var error in ViewBag.Errors)
        {
            //If there are any errors for a field...
            if(@error.Errors.Count > 0)
            {
                // We show the first error for that field
                <p>@error.Errors[0].ErrorMessage</p>
            }
        }
    }
</div>

<form action="/process" method="post">
    <label for="reviewer_name"></label>
    <p>Reviewer Name:<input type="text" id="reviewer_name" name="reviewer_name"></p>

    <label for="restaurant_name"></label>
    <p>Restaurant Name<input type="text" id="restaurant_name" name="restaurant_name"></p>

    <label for="review"></label>
    <p>Review:<textarea name="restaurant_Review" id="review" cols="20" rows="2"></textarea></p>

    <label for="dateVisit"></label>
    <p>Date of Visit:<input type="date" id="dateVisit" name="date_visit"></p>

    <p>Stars:<select name="stars" id="stars" >
        <option></option>
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
    </select></p>
    <input type="submit" value="Submit">
</form>
